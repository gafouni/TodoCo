{% extends 'base.html.twig' %}

{% block header_title %}<h1>Modifier <strong>{{ user.username }}</strong></h1>{% endblock %}
{% block header_img %}{% endblock %} 

{% block body %}
    <div class="row">
        {{ form_start(form) }}
            {{ form_row(form.username, {'label': 'Nom d\'utilisateur'}) }}
            {{ form_row(form.email, {'label': 'Adresse email'}) }}
            {{ form_row(form.password, {'label': 'Mot de passe'}) }}
            {{ form_row(form.roles, {'label': 'Role'}) }}

            <button type="submit" class="btn btn-success pull-right">Modifier</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
